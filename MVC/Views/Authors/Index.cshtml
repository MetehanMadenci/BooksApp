@model IEnumerable<AuthorsModel>

@* Generated from Custom Template. *@
@* Model namespace using directive should be added to _ViewImports.cshtml. *@

@{
    var containerDivClass = "container";
}
@{
    ViewBag.Title = "Authors List";
}

<div class="@containerDivClass">
    <h3>@ViewData["Title"]</h3>
    <hr />
</div>

@if (Model is not null)
{
    <form asp-action="Index" autocomplete="off">
        <div class="@containerDivClass">
            <div class="row">
                <div class="col-12 text-danger">
                    @TempData["Message"]
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-10 text-success">
                    @Model.Count() record(s) found.
                </div>
                <div class="col-2 text-end">
                    @* HTML: *@
                    @* <a href="Authors/Create/1">Create</a> *@
                    @* Tag Helper: *@
                    <a asp-action="Create">Create</a>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead class="table-secondary">
                    <tr>
                        <th>
                            @* HTML: *@
                            @* Name *@
                            @*HTML Helper: *@
                            @Html.DisplayNameFor(Model => Model.Name) @* display name *@
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
		            @foreach (var item in Model) {
				        <tr>
					        <td>
						        @Html.DisplayFor(modelItem => item.Name) @* value *@
					        </td>
					        <td class="text-end w-25">
                                @* HTML: *@
                                @* <a href="Authors/Details/1">Details</a>*@
                                @* Tag Helper: *@
						        <a asp-action="Details" asp-controller="Authors" asp-route-id="@item.Record.Id">Details</a>&nbsp;|&nbsp;

                                @* HTML: *@
                                @*<a href="Authors/Edit/1">Edit</a>*@
                                @* Tag Helper: *@
						        <a asp-action="Edit" asp-route-id="@item.Record.Id">Edit</a>&nbsp;|&nbsp;
                                @* HTML: *@
                                @*<a href="Authors/Delete/1">Delete</a>*@
                                @* Tag Helper: *@
						        <a asp-action="Delete" asp-route-id="@item.Record.Id">Delete</a>
					        </td>
				        </tr>
		            }
                </tbody>
            </table>
        </div>
    </form>
}
